@model IEnumerable<Time_Sheet.Models.TimeSheet>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    @{
        Html.RenderPartial("NavBar");

    }



    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">

                        <h2><b>Time Sheet</b></h2>
                    </div>
                    <div class="col-sm-push-6">


                        <a href="@Url.Action("Create","TimeSheets")" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Task</span></a>

                        <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th>@Html.DisplayNameFor(model => model.Client)</th>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>

                        <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                        <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                        <th>@Html.DisplayNameFor(model => model.Comments)</th>
                        <th>Time Spent</th>
                        <th>Actions</th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {


                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.Client)</td>
                        <td> @Html.DisplayFor(modelItem => item.Title)</td>
                        <td> @Html.DisplayFor(modelItem => item.StartTime)</td>
                        <td> @Html.DisplayFor(modelItem => item.EndTime)</td>
                        <td> @Html.DisplayFor(modelItem => item.Comments)</td>
                        @{

                            TimeSpan? Difference = item.EndTime.Subtract(item.StartTime);

                        }
                        @if (@Difference.Value.Days > 0)
                        {
                            <td>
                                <span>@Difference.Value.Days day  @Difference.Value.Hours hours  @Difference.Value.Minutes minutes</span>
                            </td>
                        }
                        <td>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>




</body>
